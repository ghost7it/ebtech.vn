@using Entities.Models;
@{
    IEnumerable<CategoryType> categoryTypes = (IEnumerable<CategoryType>)ViewBag.CategoryTypes;
    long? categoryId = (long?)ViewBag.CategoryId;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Chọn bài viết để tạo liên kết chuyên mục</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
                <div class="scroller" style="height:500px; overflow:auto;">
                    @Html.Raw(Html.CategoryTypeTreeForCreateLink(categoryTypes, categoryId))
                </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" type="button">Đóng lại</button>
</div>