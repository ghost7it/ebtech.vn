@model IEnumerable<Entities.Models.Article>
@{
    var pagingInfo = (Common.PagingInfo)ViewBag.PagingInfo;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Chọn bài viết để tạo liên kết chuyên mục</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12 xxx-container">
            <table class="table table-striped table-bordered table-hover" id="datatable_ajax_source">
                <thead>
                    <tr role="row" class="heading">
                        <th class="table-checkbox">
                            TT
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Ngày xuất bản
                        </th>
                        <th>
                            Chọn
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = (pagingInfo.ItemsPerPage * pagingInfo.CurrentPage) - pagingInfo.ItemsPerPage + 1;
                        foreach (var item in Model)
                        {
                            string link = Url.RouteUrl("FrontEndArticleDetail2", new { title = Common.StringHelper.StringFilter(item.Title), id = item.Id }).ToString();
                            <tr>
                                <td style="text-align:center;">@((i++).ToString())</td>
                                <td>
                                    <a target="_blank" href="@link">
                                        @item.Title
                                    </a>
                                </td>
                                <td>@(item.PublishDate.HasValue ? item.PublishDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>
                                    <a class="btn green btn-sm create-link" href="#" data-link="@link"><i class="fa fa-link"></i> Chọn</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="pull-left">
                Tìm kiếm <input type="text" class="search-article" style="background-color: white;border: 1px solid #e5e5e5;border-radius: 0;box-shadow: none;color: #333333;font-size: 14px;font-weight: normal;transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s; line-height:25px;" name="key" value="@ViewBag.Key" /><button class="btn btn-primary btn-sm btn-search-article" type="button" style="margin-bottom: 4px;"><i class="fa fa-search"></i> Tìm</button>
            </div>
            <div class="navigation">
                Trang
                @Html.Raw(Html.pageLinks2(pagingInfo.TotalPages, pagingInfo.CurrentPage))
                @*@{
                    System.Text.StringBuilder result = new System.Text.StringBuilder();
                    for (int i = 1; i <= pagingInfo.TotalPages; i++)
                    {
                        TagBuilder tag = new TagBuilder("a");
                        tag.MergeAttribute("href", "#");
                        tag.AddCssClass("next-article-page");
                        tag.MergeAttribute("data-page", i.ToString());
                        tag.InnerHtml = i.ToString();
                        if (i == pagingInfo.CurrentPage)
                        {
                            tag.AddCssClass("selected");
                        }
                        result.Append(tag.ToString());
                    }
                    @Html.Raw(result.ToString());
                }*@
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" type="button">Đóng lại</button>
</div>
