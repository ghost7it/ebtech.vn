@model Entities.Models.Article
@{
    IEnumerable<Entities.Models.ArticleCategory> articleCategory = (IEnumerable<Entities.Models.ArticleCategory>)ViewBag.ArticleCategory;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Xem chi tiết bài viết</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="row static-info">
                <div class="col-md-3 name">
                    Tiêu đề bài viết:
                </div>
                <div class="col-md-9 value">
                    @Model.Title
                </div>
            </div>
            <div class="row static-info">
                <div class="col-md-3 name">
                    Người biên tập:
                </div>
                <div class="col-md-9 value">
                    @ViewBag.CreateBy
                </div>
            </div>
            <div class="row static-info">
                <div class="col-md-3 name">
                    Ngày cập nhật:
                </div>
                <div class="col-md-9 value">
                    @(Model.UpdateDate.HasValue ? Model.UpdateDate.Value.ToString("dd/MM/yyyy") : Model.CreateDate.ToString("dd/MM/yyyy"))
                </div>
            </div>
            <div class="row static-info">
                <div class="col-md-3 name">
                    Thuộc chuyên mục:
                </div>
                <div class="col-md-9 value">
                    @if (articleCategory != null && articleCategory.Any())
                    {
                        foreach (var item in articleCategory)
                        {
                            <span>- @item.Category.Name</span>
                        }
                    }
                    else
                    {
                        <span style="font-weight:normal;"><i>Không thuộc chuyên mục</i></span>
                    }
                </div>
            </div>
            <h4>Ảnh mô tả</h4>
            <img src="@(string.IsNullOrEmpty(Model.ImageDescription) ? "http://www.placehold.it/400x150/EFEFEF/AAAAAA&text=No+image" : Model.ImageDescription)" alt="" style="height:100%;" />
            <h4>Nội dung trích dẫn:</h4>
            <div>@Html.Raw(Model.Description)</div>
            <h4>Nội dung chi tiết:</h4>
            <div>@Html.Raw(Model.Description)</div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn default" data-dismiss="modal">Đóng lại</button>
</div>