@model  IEnumerable<Entities.ViewModels.KhachThueUpdatingViewModel>
@{
    //IEnumerable<Entities.ViewModels.AccountUpdatingViewModel> listAccount = (IEnumerable<Entities.ViewModels.AccountUpdatingViewModel>)ViewBag.Accounts;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Danh sách khách thuê phù hợp với nhà</h4>
</div>
<div class="modal-body" style="height: auto;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tên khách</th>
                <th>Só điện thoại</th>
                <th>Quận</th>
                <th>Đường</th>
                <th>Diện tích đất</th>
                <th>Tổng giá thuê</th>
                <th>Chọn nhân viên chăm sóc</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenKhach</td>
                        <td>@item.SoDienThoai</td>
                        <td>@item.QuanName</td>
                        <td>@item.DuongName</td>
                        <td>@item.DienTichDat</td>
                        <td>@item.TongGiaThue</td>
                        <td style="display: flex;">
                            @Html.DropDownList("NhanVienPhuTrachId", (IEnumerable<SelectListItem>)ViewBag.Accounts, new { @class = "form-control", @style = "width: 150px;" })
                            <a href="@Url.RouteUrl("NhaDetailModal", new { id = item.Id })"><i class="fa fa-user"></i>&nbsp; Phân công</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn default" data-dismiss="modal">Đóng lại</button>
</div>
<style type="text/css">
    .modal-dialog {
        width: 86%;
    }

    .static-info {
        margin-bottom: 10px;
    }
</style>