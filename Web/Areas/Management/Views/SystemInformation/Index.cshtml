                            </div>
                            <div style="position:absolute; top:320px; right:20px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Khối bên phải</span>   @Html.DropDownList("RightAlbum", (SelectList)ViewBag.Album, "---Chọn album---", new { @style = "width:180px; height:30px;" })
                            </div>

                            <div style="position:absolute; top:810px; right:530px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Khối tin bên trái 1</span>   @Html.DropDownGroupList("LeftArticle1", (IEnumerable<GroupedSelectListItem>)ViewBag.Categories, "---Chọn chuyên mục---", new { @style = "width:250px; height:30px;" })
                            </div>
                            <div style="position:absolute; top:810px; right:20px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Khối tin bên phải 1</span>   @Html.DropDownGroupList("RightArticle1", (IEnumerable<GroupedSelectListItem>)ViewBag.Categories, "---Chọn chuyên mục---", new { @style = "width:180px; height:30px;" })
                            </div>

                            <div style="position:absolute; top:1120px; right:530px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Khối tin bên trái 2</span>   @Html.DropDownGroupList("LeftArticle2", (IEnumerable<GroupedSelectListItem>)ViewBag.Categories, "---Chọn chuyên mục---", new { @style = "width:250px; height:30px;" })
                            </div>
                            <div style="position:absolute; top:1120px; right:20px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Khối tin bên phải 2</span>   @Html.DropDownGroupList("RightArticle2", (IEnumerable<GroupedSelectListItem>)ViewBag.Categories, "---Chọn chuyên mục---", new { @style = "width:180px; height:30px;" })
                            </div>

                            <div style="position:absolute; top:1460px; left:30%; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Các đối tác</span>   @Html.DropDownList("BottomAlbum", (SelectList)ViewBag.Album, "---Chọn album---", new { @style = "width:250px; height:30px;" })
                            </div>
                            <div style="position:absolute; top:1700px; left:30%; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Liên kết cuối trang</span>   @Html.DropDownList("BottomMenu", (SelectList)ViewBag.CategoryType, "---Chọn loại chuyên mục (menu) ---", new { @style = "width:180px; height:30px;" })
                            </div>

                        </div>
                        <div style="position:fixed; top:50%; right:30px; z-index:999;">
                            <button type="button" class="btn btn-circle green btn-lg map-submit">
                                <span class="glyphicon glyphicon-saved">
                                </span> Ghi nhận
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    @Styles.Render("~/Content/adminv1/select2")
}
@section Scripts {
    @Scripts.Render("~/bundles/adminv1/jqueryval", "~/bundles/adminv1/select2")
<script type="text/javascript" src="~/Editor/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="~/Editor/ckfinder/ckfinder.js"></script>>
<script type="text/javascript">
    jQuery(document).ready(function () {
        $('#SiteName').focus();
        $('#MainMenu').val('@Model.MainMenu');
        $('#RightMenu').val('@Model.RightMenu');
        $('#HomeAlbum').val('@Model.HomeAlbum');
        $('#RightAlbum').val('@Model.RightAlbum');
        $('#LeftArticle1').val('@Model.LeftArticle1');
        $('#LeftArticle2').val('@Model.LeftArticle2');
        $('#RightArticle1').val('@Model.RightArticle1');
        $('#RightArticle2').val('@Model.RightArticle2');
        $('#BottomAlbum').val('@Model.BottomAlbum');
        $('#BottomMenu').val('@Model.BottomMenu');
        CKEDITOR.replace('Copyright', {
            toolbar: [
                ['Bold', 'Italic', '-', 'Link', 'Unlink'], ['FontSize', 'TextColor', 'BGColor']
            ]
        });
        $(document).on('click', '.select-image', function () {
            var finder = new CKFinder();
            finder.startupPath = 'Images:/chung/';
            finder.selectActionFunction = function (fileUrl) {
                $('#Logo').val(fileUrl);
                $('#Image_Preview').attr('src', fileUrl);
            };
            finder.popup();
        });
        $(document).on('click', '.map-submit', function (e) {
            e.preventDefault();
            AdminVersionOne.blockUI({
                message: 'Vui lòng đợi!',
                overlayColor: 'none',
                cenrerY: true,
                boxed: true
            });
            var URL = '@Url.RouteUrl("SystemInformationSiteMap")';
            $.ajax({
                type: 'POST',
                url: URL,
                dataType: 'json',
                data: $('.form-site-map').serialize(),
                success: function (result) {
                    if (result.success == true) {
                        alert("Đã ghi nhận thành công!");
                    }
                    else {
                        alert(result.message);
                    }
                },
                error: function (xhr, ajaxOptions, error) {
                    alert('Đã xảy ra lỗi khi thực hiện yêu cầu của bạn. Vui lòng kiểm tra và thử lại!');
                },
                complete: function (result) {
                    AdminVersionOne.unblockUI();
                }
            });
        });
        $(document).on('click', '.smtp-submit', function (e) {
            e.preventDefault();
            AdminVersionOne.blockUI({
                message: 'Vui lòng đợi!',
                overlayColor: 'none',
                cenrerY: true,
                boxed: true
            });
            var URL = '@Url.RouteUrl("SystemInformationSMTP")';
            $.ajax({
                type: 'POST',
                url: URL,
                dataType: 'json',
                data: $('.form-smtp').serialize(),
                success: function (result) {
                    if (result.success == true) {
                        alert("Đã ghi nhận thành công!");
                    }
                    else {
                        alert(result.message);
                    }
                },
                error: function (xhr, ajaxOptions, error) {
                    alert('Đã xảy ra lỗi khi thực hiện yêu cầu của bạn. Vui lòng kiểm tra và thử lại!');
                },
                complete: function (result) {
                    AdminVersionOne.unblockUI();
                }
            });
        });
    });
</script>
}