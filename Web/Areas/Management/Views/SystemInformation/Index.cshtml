                            <div style="position:absolute; top:105px; right:20px; border:5px solid #ff0000">
                                <span style="font-weight:bold;">Menu phải</span>   @Html.DropDownList("RightMenu", (SelectList)ViewBag.CategoryType, "---Chọn loại chuyên mục (menu)---", new { @style = "width:180px; height:30px;" })
